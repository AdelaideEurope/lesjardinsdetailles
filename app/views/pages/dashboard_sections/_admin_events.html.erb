<div class="dashboard-crop-plan-line-card dashboard-admin-event-card orange" id="decharge-mentale">
  <div class="card-colored-top-part-fixed-color orange">
    <div class="card-top-part-text">Décharge mentale</div>
  </div>
  <div class="card-bottom-part">
    <div class="card-bottom-part-text scrollable-card">
      <div class="mt-2">
        <% if admin_events.empty? %>
        <p><%= "Non, rien de rien..."  %></p>
        <% end %>
        <%= render "pages/dashboard_sections/done_todo_admin_events", farm: farm, admin_events: todo_admin_events, workers: workers, event: event %>
        <%= link_to farm_events_multiple_update_path(farm, start_date: params[:start_date]), method: :post do %>Décaler tout à la semaine pro<% end %>

        <% if !done_admin_events.empty? %>
          <a class="collapsed" data-toggle="collapse" href="#collapse-done-admin-<%= params[:start_date] %>" aria-expanded="false" aria-controls="collapse-done-admin-<%= params[:start_date] %>">
            <div class="d-flex"><h5><p class="mt-4">Déjà fait ! 💪🏻</p></h5><i class="fa" aria-hidden="true"></i></div>
          </a>
          <div class="collapse" id="collapse-done-admin-<%= params[:start_date] %>">
            <%= render "pages/dashboard_sections/done_todo_admin_events", farm: farm, admin_events: done_admin_events, workers: workers, event: event %>
          </div>
        <% end %>

      </div>
    </div>
    <div class="d-flex justify-content-end card-bottom-section-with-icon" id="new-admin-event">
      <a href="#" data-toggle="modal" data-target="#modal-new-admin-event">
        <div class="card-bottom-right-triangle orange">
          <i class="fas fa-plus"></i>
        </div>
      </a>
    </div>
    <%= render "pages/dashboard/create_admin_event_modal", farm: farm, event: @new_event %>
  </div>
</div>
