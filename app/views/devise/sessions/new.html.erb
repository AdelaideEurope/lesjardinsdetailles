<div class="signup-signin-layout">
  <div class="signup-signin-left-pane">
    <%= link_to root_path, class: "signup-signin-logo" do %>
      <%= image_tag "logo.png", class: "small-logo-signup-signin" %>
    <% end %>
    Se connecter
  </div>
  <div class="signup-signin-right-pane">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    :label => "Mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, :label => "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Connexion", class: "txt-button" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

