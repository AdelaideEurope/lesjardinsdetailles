<%- if controller_name != 'sessions' %>
  <%= link_to "J'ai déjà un compte", new_session_path(resource_name), class: "small-infos" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Inscription", new_registration_path(resource_name), class: "small-infos" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "small-infos" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Tu n'as pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name), class: "small-infos" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Tu n'as pas reçu les instructions de récupération ?", new_unlock_path(resource_name), class: "small-infos" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Se connecter #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "small-infos" %><br />
  <% end %>
<% end %>
