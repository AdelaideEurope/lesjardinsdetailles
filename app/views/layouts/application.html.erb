<!DOCTYPE html>
<html>
  <head>
    <title>Les Jardins détaillés</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= stylesheet_pack_tag 'application' %>

  </head>

  <body>
    <%= render 'shared/flashes' %>
    <% if controller_name != 'sessions' && controller_name != 'registrations' && controller_name == 'pages' && action_name != 'dashboard' %>
      <%= render 'shared/pages_navbar' %>
      <%= yield %>
    <% elsif controller_name != 'sessions' && controller_name != 'registrations' && controller_name != 'passwords' %>
      <div class="wrapper">
        <%= render 'shared/main_navbar' %>
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
