<section class="drawer" id="drawer-hen-action-edit<%= hen_action.id %>" data-drawer-target>
  <div class="drawer__overlay" data-drawer-close tabindex="-1"></div>
  <div class="drawer__wrapper">
    <div class="drawer__header">
      <div class="d-flex justify-content-between">
        <div class="drawer__title">
          <div>
            <h2>Modifier</h2>
          </div>
        </div>
        <button class="drawer__close" data-drawer-close aria-label="Fermer le drawer">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>
    <div class="drawer__content drawer-content-with-bottom-buttons">
      <div>
        <%= form_with model: hen_action, url: farm_poulette_path(farm, hen_action), method: :patch, local: true do |form| %>

        <h4 class="mt-4">Description</h4>
        <%= form.text_area :action, value: hen_action&.action, class: "mt-2 w-100", rows: "4" %>
        <h4 class="mt-4">Commentaire</h4>
        <%= form.text_area :comment, value: hen_action&.comment, class: "mt-2 w-100", rows: "4" %>
      </div>
      <div class="drawer-edit-bottom-buttons px-sm-4">
        <div><%= form.submit value: "Valider", class: "btn txt-button-background olive mt-2", 'data-disable-with': "..." %></div>
        <div><%= link_to "Supprimer", farm_poulette_path(farm, hen_action.id, start_date: params[:start_date]), method: :delete, class: "btn txt-button-background red mt-2", data: { confirm: "T'es #{current_user.is_female? ? 'sÃ»re' : 'sÃ»r'}Â ? ðŸ¤¨"} %></div>
      </div>
      <% end %>
    </div>
  </div>
</section>
