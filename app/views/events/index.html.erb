<div class="container mt-4">
  <%= month_calendar(events: @presence_periods+@events) do |date, events| %>
    <%= date.day %>

    <% events.each do |event| %>
      <% if !event.is_a? Event %>
        <div>
          <div class="d-flex justify-content-around calendar-user-presence-periods">
            <% event.users.each do |user| %>
              <div class="sm-txt-avatar <%= user.color %>"><%= user.first_name[0] %></div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bgcolor-<%= @event_colors[event.event_subcategory.to_sym] %> text-white">
          <div class="d-flex justify-content-between p-2">
            <%= event.description %>
            <% event.users.each do |user| %>
              <div class="sm-txt-avatar <%= user.color %>"><%= user.first_name[0] %></div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>


